#lightbox
  position fixed
  top 0
  left 0
  z-index 2
  width 100%
  height 100%
  background #000

  &.hidden
    display none

  #slides
    width 100%
    height 100%
    div
      position absolute
      width 100%
      height 100%
      background-size cover
      background-position center center
      background-repeat no-repeat
      transition transform 0.33s ease-in-out
      backface-visibility hidden
      display none
      &.portrait
        background-size contain
      &.left
        transform translateX(-100%)
      &.right
        transform translateX(100%)
      &.active
        display block
      &.no-animate
        transition none

  #close, #prev, #next
    position absolute
    top 1em
    left 1em
    width 3em
    height 3em
    cursor pointer
    opacity 0.35
    transition opacity 0.2s ease-in-out
    svg
      transition transform 0.2s ease-in-out
    &:hover
      opacity 0.66
    &:active
      opacity 1

  #prev, #next
    top 50%
    &:hover
      opacity 0.8
      svg
        transform translateX(-0.5em)

  #next
    right 1em
    left auto
    &:hover
      svg
        transform translateX(0.5em)


@media screen and (max-width: 45em)
  
  #lightbox
    #close, #prev, #next
      height 2em
      width 2em