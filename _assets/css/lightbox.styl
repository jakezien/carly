#lightbox
  position fixed
  top 0
  left 0
  z-index 2
  width 100%
  height 100%
  background #000
  transition opacity 0.35s ease-in-out

  &.hidden
    display none

  &.visually-hidden
    opacity 0

  #slides
    width 100%
    height 100%
    div
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      background-size cover
      background-position center center
      background-repeat no-repeat
      transition transform 0.33s ease-in-out, opacity 0.33s ease-in-out
      backface-visibility hidden
      display none
      &.portrait
        background-size contain
      &.left
        transform translateX(-100%)
      &.right
        transform translateX(100%)
      &.active
        display block
        .bg, .caption
          display block
      &.no-animate
        transition none

      &.slide
        &:after
          content: ''
          display block
          position absolute
          width 1.5em
          height 1.5em
          border-radius 50%
          background #B2D6B3
          margin -.75em 0 0 -.75em
          top 50%
          left 50%
          opacity 0
          transition opacity 0.3s ease
        &.loading
          .bg
            opacity 0
          &:after
            opacity 1
            animation loading-pulse 2s infinite




      &.caption
        top auto
        bottom 0
        padding 3em 2em 2em 2em
        box-sizing border-box
        height auto
        color rgba(206,208,232,0.7)
        font-size 1.25em
        line-height 1.5em
        background-image -moz-radial-gradient(left bottom, ellipse farthest-side, #000000, rgba(0, 0, 0, 0) 100%)
        background-image -webkit-radial-gradient(left bottom, ellipse farthest-side, #000000, rgba(0, 0, 0, 0) 100%)
        background-image -o-radial-gradient(left bottom, ellipse farthest-side, #000000, rgba(0, 0, 0, 0) 100%)
        background-image -ms-radial-gradient(left bottom, ellipse farthest-side, #000000, rgba(0, 0, 0, 0) 100%)
        background-image radial-gradient(left bottom, ellipse farthest-side, #000000, rgba(0, 0, 0, 0) 100%)
        Genath()
        h3
          GenathBold()
          font-weight normal
          font-size 1.5rem
          margin 0
          color rgba(206,208,232,0.925)


  #close, #prev, #next
    position absolute
    top 1em
    left 1em
    width 3em
    height 3em
    cursor pointer
    opacity 0.35
    transition opacity 0.2s ease-in-out
    svg
      transition transform 0.2s ease-in-out
    &:hover
      opacity 0.66
    &:active
      opacity 1

  #prev, #next
    top 50%
    margin-top -1.5em
    &:hover
      opacity 0.8
      svg
        transform translateX(-0.5em)

  #next
    right 1em
    left auto
    &:hover
      svg
        transform translateX(0.5em)


@media screen and (max-width: 45em)
  
  #lightbox
    #close, #prev, #next
      height 2em
      width 2em